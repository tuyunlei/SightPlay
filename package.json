{
  "name": "sightplay",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "test": "vitest",
    "test:run": "vitest run",
    "test:ci": "vitest run --coverage",
    "test:e2e": "playwright test",
    "typecheck": "tsc --noEmit",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "dep:check": "dependency-cruiser . --config .dependency-cruiser.cjs --exclude \"node_modules|dist|coverage|\\.github|scripts\"",
    "lint:size": "node scripts/check-file-size.js --src=.",
    "lint:dead": "knip",
    "lint:arch": "npm run dep:check && npm run lint:size && npm run lint:dead",
    "prepare": "husky install"
  },
  "dependencies": {
    "@passwordless-id/webauthn": "^2.3.1",
    "@sentry/react": "^10.38.0",
    "lucide-react": "^0.563.0",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "zustand": "^5.0.3"
  },
  "devDependencies": {
    "@eslint/js": "^8.57.0",
    "@playwright/test": "^1.58.2",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/react": "^16.3.2",
    "@types/node": "^22.14.0",
    "@types/react": "^19.2.13",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.0.0",
    "@vitest/coverage-v8": "^2.1.8",
    "dependency-cruiser": "^16.7.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.7.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-react-refresh": "^0.4.14",
    "husky": "^9.1.6",
    "jsdom": "^24.0.0",
    "knip": "^5.45.0",
    "lefthook": "^2.1.0",
    "lint-staged": "^15.2.10",
    "prettier": "^3.4.2",
    "typescript": "~5.8.2",
    "typescript-eslint": "^8.22.0",
    "vite": "^6.2.0",
    "vitest": "^2.1.8"
  }
}
